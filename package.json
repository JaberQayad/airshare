{
    "name": "airshare",
    "version": "2.0.0",
    "description": "PeerJS-based peer-to-peer file sharing with multiple files, encryption, and pause/resume",
    "main": "src/server/index.js",
    "scripts": {
        "start": "node src/server/index.js",
        "dev": "nodemon src/server/index.js",
        "lint": "eslint \"src/**/*.js\"",
        "format": "prettier --write \"src/**/*.js\" \"src/**/*.css\" \"src/**/*.html\" \"docs/**/*.{md,mdx,json,js,ts,tsx}\"",
        "format:check": "prettier --check \"src/**/*.js\" \"src/**/*.css\" \"src/**/*.html\""
    },
    "dependencies": {
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "helmet": "^8.1.0"
    },
    "devDependencies": {
        "eslint": "^9.17.0",
        "nodemon": "^3.0.1",
        "prettier": "^3.4.2"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/jaberio/airshare.git"
    },
    "author": "jaberio",
    "license": "MIT"
}
